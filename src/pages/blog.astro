---
import BaseLayout from '../layouts/BaseLayout.astro';
import { pages } from '../data/pages';

const { meta, breadcrumb, scripts } = pages.blog;
---

<BaseLayout {...meta} breadcrumb={breadcrumb} scripts={scripts}>
<section
        class="blog-main section bg-color-body section-padding-top-bottom"
      >
        <div class="container">
          <div class="row g-4 gx-lg-5">
            <div class="col-lg-8">
              <div class="row gx-4 gy-5">
                <div class="col-12 fade-anim">
                  <div class="blog-box">
                    <div class="blog-thumb">
                      <img
                        src="/img/blog/preview/1000x1250_prv-01.webp"
